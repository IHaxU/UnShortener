{
    "manifest_version": 3,
    "name": "UnShortener",
    "version": "1.0.13",
    "description": "UnShortener enhances your experience on navigating through links that are shortened.",
    "browser_specific_settings": {
        "gecko": {
            "id": "@unshortener",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://work.ink/*"],
            "js": ["work_ink.js"],
            "run_at": "document_start",
            "world": "MAIN"
        }
    ]
}


